<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- Action Bar -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="background">@drawable/background_action_bar_gradient</item>
        <item name="titleTextAppearance">@style/ActionBar.TitleTextAppearance</item>
        <item name="title">@string/app_name</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="logo">@mipmap/ic_launcher_round</item>
    </style>

    <style name="ActionBar.TitleTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:titleTextColor">#ffffff</item>
    </style>

</resources>
